SELECT
    a.nome_aluno,
    c.nome_curso,
    a.cidade,
    ci.estado,
    m.data_matricula
FROM alunos a
INNER JOIN matriculas m ON a.id_aluno = m.id_aluno
INNER JOIN cursos c ON m.id_curso = c.id_curso
INNER JOIN cidades ci ON a.cidade = ci.cidade
ORDER BY a.nome_aluno;

SELECT
    estado,
    COUNT(*) as 'Quantidade de Alunos'
FROM alunos a
INNER JOIN cidades c ON a.cidade = c.cidade
GROUP BY estado
ORDER BY COUNT(*) DESC;

SELECT
    c.nome_curso,
    COUNT(*) as 'Quantidade de Matrículas'
FROM matriculas m
INNER JOIN cursos c ON m.id_curso = c.id_curso
GROUP BY c.nome_curso
ORDER BY COUNT(*) DESC;

SELECT
    a.nome_aluno,
    COUNT(*) as 'Quantidade de Cursos'
FROM alunos a
INNER JOIN matriculas m ON a.id_aluno = m.id_aluno
GROUP BY a.nome_aluno
HAVING COUNT(*) > 1
ORDER BY COUNT(*) DESC;

SELECT
    nome_aluno,
    cidade
FROM alunos
WHERE cidade = 'São Paulo';

SELECT
    a.nome_aluno,
    c.nome_curso,
    m.data_matricula
FROM alunos a
INNER JOIN matriculas m ON a.id_aluno = m.id_aluno
INNER JOIN cursos c ON m.id_curso = c.id_curso
WHERE c.nome_curso = 'desinvolvimento de sistema';

SELECT
    a.nome_aluno,
    c.nome_curso,
    m.data_matricula
FROM alunos a
INNER JOIN matriculas m ON a.id_aluno = m.id_aluno
INNER JOIN cursos c ON m.id_curso = c.id_curso
WHERE m.data_matricula BETWEEN '2024-08-04' AND '2024-07-23'
ORDER BY m.data_matricula;

SELECT
    c.nome_curso,
    COUNT(m.id_aluno) as 'Alunos Matriculados'
FROM cursos c
LEFT JOIN matriculas m ON c.id_curso = m.id_curso
GROUP BY c.nome_curso
ORDER BY COUNT(m.id_aluno) DESC;

SELECT
    a.nome_aluno,
    a.cidade,
    ci.estado
FROM alunos a
INNER JOIN cidades ci ON a.cidade = ci.cidade
WHERE ci.estado = 'SP'
ORDER BY a.nome_aluno;

SELECT
    a.nome_aluno,
    a.cidade,
    ci.estado,
    c.nome_curso,
    m.data_matricula
FROM alunos a
INNER JOIN cidades ci ON a.cidade = ci.cidade
INNER JOIN matriculas m ON a.id_aluno = m.id_aluno
INNER JOIN cursos c ON m.id_curso = c.id_curso
WHERE a.nome_aluno = 'Maria da silva'
ORDER BY m.data_matricula;
